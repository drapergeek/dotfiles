[init]
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  #delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  dm = diff master
  done = !git merge-branch && g push origin master
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  merge-branch = !git checkout master && git merge @{-1}
  mm = !test `git rev-parse master` = $(git merge-base HEAD master) && git checkout master && git merge HEAD@{1} && rake && git push && git delete-branch $(git rev-parse --abbrev-ref @{-1}) || echo "Non-fastforward"
  pr = !gh pull-request
  rc = rebase --continue
  selfauthor = commit --amend --author='Jason Draper <jason@drapergeek.com>'
  st = status
  uf = reset --hard HEAD
  up = !git fetch origin && git rebase origin/master
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[user]
  name =  Jason Draper
  email = jason@drapergeek.com
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[rerere]
  enabled = 0
[hub]
  protocol = https
